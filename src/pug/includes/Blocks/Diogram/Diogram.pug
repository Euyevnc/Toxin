mixin Diogram(id, first, second, third, fourth)
    div(class="Diogram")
        div(class="Diogram__title UpperPurple")
            p(class="UpperPurple" style="font-size:24px") 
            p(class="UpperPurple") 
        canvas(width="120px" height="120px" id=`${id}` class="Diogram__diogram" )
        div.Diogram__legend
            div(class="Diogram__item" data-amount=`${first}`)
                span 
                p Великолепно
            div(class="Diogram__item" data-amount=`${second}`)
                span 
                p Хорошо
            div(class="Diogram__item" data-amount=`${third}`)
                span 
                p Удовлетворительно           
            div(class="Diogram__item" data-amount=`${fourth}`) 
                span 
                p Разачарован