extends ../../layout/layout-for-hotel.pug
include ../../blocks/header/header.pug
include ../../blocks/footer/footer.pug
include ../../blocks/cellar/cellar.pug
include ../../blocks/pictures-demo/pictures-demo.pug
include ../../blocks/stickers/stickers.pug
include ../../blocks/diogram/diogram.pug
include ../../blocks/reviews/reviews.pug
include ../../blocks/marked-list/marked-list.pug

block variables
    
block head
    title RoomDetails
    meta(name="keywords", content="keywords")
    meta(name="description", content="description")
block header
    +Header(false, {name: "О нас", href:"/about_us/"},{name: "Услуги", blocks:[{href:"/services1/", name:"Some"},{href:"/services3/", name:"Some else"}, {href:"/services3/", name:"Nevermind"} ]}, {name: "Вакансии", href:"/list/" },{name: "Новости", href:"/news/" },{name: "Соглашения", blocks:[{href:"/convience1/", name:"Some"},{href:"/convience2/", name:"Some else"} ]} )
block content    
    section.content__pictures
        +Pictures-demo(require("./img/image(1).jpg").default, require("./img/image 2(1).jpg").default, require("./img/image 3.jpg").default)
    section.content__information
        div.content__stickers
            h2(class="content__header content__header_margin_zero") Сведения о номере
            +Stickers({icon: "insert_emoticon", describe: "Комфорт", subscribe: "Шумопоглощающие стены"}, {icon: "location_city", describe: "Удобство",  subscribe: "Окно в каждой из спален"}, {icon: "whatshot", describe: "Уют" , subscribe: "Номер оснащён камином"})
        
        div.content__diogram
            h2(class="content__header ") Впечатления от номера
            +Diogram("diogram_doub") 

        div.content__reviews
            h2(class="content__header ") Отзывы посетителей номера
            +Reviews
       
        div.content__rules
            h2(class="content__header content__header_shift_right") Правила
            +Marked-list("Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00")
        
        div.content__cancel-rules
            h2(class="content__header ") Отмена 
            p.content__font Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
    section.content__booking 
        include ../../blocks/number-booker/number-booker.pug
block footer
    +Footer("Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»", {caption:"Навигация", links:[{href: "/about/",desc: "О нас"},{href: "/news/",desc: "Новости"},{href: "/support/",desc: "Служба поддержки"},{href: "/services/",desc: "Услуги"} ]}, {caption:"О нас", links:[{href: "/about_service/",desc: "О сервисе"},{href: "/team/",desc: "Наша команда"},{href: "list/",desc: "Вакансии"},{href: "/investors/",desc: "Инвесторы"} ]}, {caption:"Служба поддержки", links:[{href: "/convience/",desc: "Соглашения"},{href: "/comm/",desc: "Сообщества"},{href: "/connection/",desc: "Связь с нами"} ]})
block cellar  
    +Cellar("Copyright © 2018 Toxin отель. Все права зачищены.", [{link: "/twit/", class: "fa-twitter"}, {link:"/fb/", class: "fa-facebook-square"}, {link:"/inst/", class: "fa-instagram"}])
block script
