mixin Range-picker(descr, subscr)
    .range-picker.js-range-picker
        div.range-picker__header
            h3.range-picker__title #{descr}
            span.range-picker__counter
                span(class="range-picker__min js-range-picker__min") 
                span ₽ - 
                span(class="range-picker__max js-range-picker__max")
                span ₽
        div(id="range-picker" class="js-range-picker__container range-picker__container")

        if subscr 
            div
                p.range-picker__subscribe #{subscr}