mixin diagram( { statistic =  [], subjects = [] }={})
  article(class="js-diagram diagram" data-statistics)
    section.diagram__image
      div(class="js-diagram__title diagram__title")
        b(class= "js-diagram__reviews-amount diagram__reviews-amount" data-form1=subjects[0], data-form2=subjects[1], data-form3=subjects[2])
        b.js-diagram__subtitle.diagram__subtitle
      canvas(width="120px" height="120px" class="js-diagram__canvas diagram__canvas" )
    section.diagram__legend.js-diagram__legend
      each item in statistic
        div(class="diagram__legend-item"  data-amount=item.amount)
          span.diagram__legend-circle
          p.diagram__legend-lettering #{item.name}