include ../button-rounded/button-rounded.pug
include ../text-field/text-field.pug
 
article(class="entry-form")
    h1.entry-form__header Войти
    form.entry-form__form(name="entry-form")
        div.entry-form__input-container
            +Text-field('', 'Email', '', false, "email")
        div.entry-form__input-container   
            +Text-field('', 'Пароль', '', false, "password")
        div(class="entry-form__button entry-form__button_for_submit")
            +Button-rounded('Войти', ['purple'], 'arrow')
    div(class="entry-form__registration")
        p.entry-form__text Нет аккаунта на Toxin?
        span(class="entry-form__button entry-form__button_for_regist")
            +Button-rounded('создать', ['empty'], false, "button")