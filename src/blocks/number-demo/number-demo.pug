mixin Number-demo(number, category, price, rate, reviews, pictures)
    include ../rate-stars/rate-stars.pug
    - let amount = pictures.length 
    - let validPrice = price.toLocaleString()
    article(class="number-demo")
        div(class="number-demo__image-cont" tabindex=0)
            - for (var i = 0; i < amount; i++){
                if i == 0
                    img(class="number-demo__image" src=`${pictures[i]}` alt="this number looks like ")
                else
                    img(class="number-demo__image number-demo__image_disactive" src=`${pictures[i]}` alt="this number looks like ")
            -}
            span(class = "number-demo__arrow number-demo__arrow_left" tabindex=0) expand_more
            span(class = "number-demo__arrow number-demo__arrow_right" tabindex=0) expand_less
            span(class = "number-demo__buttons")
                - for (var i = 0; i < amount; i++){
                    if i == 0 
                        span(class="number-demo__button")
                    else
                        span(class="number-demo__button number-demo__button_disactive")
                -}

        div(class="number-demo__price")
            span 
                b(class="number-demo__font_color_black number-demo__font_size_middle") №
                strong(class="number-demo__font_color_black number-demo__font_size_large") &nbsp;#{number}
                strong(class="number-demo__font_color_purple number-demo__font_small number-demo__font_uppercase") &nbsp;#{category}
            span 
                b(class="number-demo__font_size_middle") #{validPrice}₽
                span(class="number-demo__font_size_small") &nbsp;в сутки

        div(class="number-demo__rate") 
            span(class="number-demo__stars")
                - let compl = Math.floor(rate)
                - let rest = rate - compl
                +Rate-stars('', compl, rest)
            span(class="number-demo__reviews")
                b(class="number-demo__font_size_middle") #{reviews}
                span(class="number-demo__font_size_small") &nbsp;Отзывов