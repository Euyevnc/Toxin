mixin Inputs-with-counter(type, label, placeholder, describe, ...issues)
    div(class=`input-with-counter input-with-counter${type?"_"+type: ""}`)
        p(class="input-with-counter__describe") #{describe}
        include ../../../static/Icons/arrow-down.pug
        label
            if label
                h3 #{label}
            input(class="input-with-counter__value" placeholder=`${placeholder}` list="amount" name="amountOfGuests") 
        ul(class="input-with-counter__menu")
            each val in issues
                - var min = val.min
                - var max = val.max
                li(class="input-with-counter__element")
                    p #{val.name}
                    span(class="input-with-counter__counter" data-min=`${min}` data-max=`${max}`)
                        span -
                        span(class="input-with-counter__number") 0
                        span +
            div.input-with-counter__buttons
                span(class="input-with-counter__button_delete") ОЧИСТИТЬ
                span(class="input-with-counter___button_confirm") ПРИМЕНИТЬ




    