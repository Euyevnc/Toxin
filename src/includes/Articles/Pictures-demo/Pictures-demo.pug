mixin Pictures-demo(largePic, firstSmallPic, secSmallPic)
    article.pictures-demo 
        .pictures-demo__large-picture-container
            img(class="pictures-demo__image" src=largePic)
        .pictures-demo__small-pictures-container
            span
                img(class="pictures-demo__image" src=firstSmallPic)
            span
                img(class="pictures-demo__image" src=secSmallPic)