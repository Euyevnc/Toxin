include ../../Inputs/Text-field/Text-field.pug
include ../../Inputs/Mask_DMY/Mask_DMY.pug
include ../../Checkboxes/Tumblers/Tumblers.pug
include ../../Checkboxes/Radio/Radio.pug
include ../../Buttons/Button-rounded/Button-rounded.pug
include ../../Buttons/Button_with_arrow/Button_with_arrow.pug

article(class="registration")
    h1.registration__header Регистрация аккаунта
    form(name="registration" class="registration__form")
        div(class="registration__personal-data")
                +Text-field('', 'Имя', '')
                +Text-field('', 'Фамилия', '')
                +Radio('', 'sex', {id:'registrtion-gender-man', describe:'Мужчина', checked:true},{id:'registration-gender-fem', describe:'Женщина'} )
        div(class="registration__birthday-data")
            +Mask_DMY('дата рождения', "ДД.ММ.ГГГГ", '')
        div(class="registration__account-data")
            +Text-field('данные для входа в сервис', 'Email', '')
            +Text-field('', 'Пароль', '')
            +Tumblers('', {id:'registration-allow-fferts', name:'Получать спецпредложения'})
        div(class="registration__button")
            +Button_with_arrow('Зарегестрироваться')
    div(class="registration__entry")
        p.registration__text Уже есть аккаунт на Toxin
        +Button-rounded('войти', 'empty')



