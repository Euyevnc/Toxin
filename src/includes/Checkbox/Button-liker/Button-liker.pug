mixin Buttons_liker(descr, ...issues)
    div.Buttons_liker_wrap
        div.Buttons_liker_head #{descr}
        div.Buttons_liker_cont
            each val in issues
                - var id = val.id
                - var am = val.am
                - var checked = Boolean(val.checked)
                if checked 
                    input(type="checkbox" id=`${id}` class="Buttons_liker_box" checked)
                else 
                    input(type="checkbox" id=`${id}` class="Buttons_liker_box")
                label(for=`${id}`)=am
                   