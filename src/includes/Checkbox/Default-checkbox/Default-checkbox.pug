mixin Checkbox(descr, ...issues)
    div.Checkboxes__wrap
        if descr
            div.Checkboxes__head 
                h3 #{descr}
        div.Checkboxes__cont
            each val in issues
                - var id = val.id
                - var name = val.name
                - var checked = Boolean(val.checked)
                div.Checkboxes__checkbox
                    if checked 
                        input(type="checkbox" id=`${id}` class="Checkbox_box" checked)
                    else 
                        input(type="checkbox" id=`${id}` class="Checkbox_box")
                    label(for=`${id}`) 
                    p.Checkboxes__text #{name}