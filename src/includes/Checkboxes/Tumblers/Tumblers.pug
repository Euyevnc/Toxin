mixin Tumblers(descr, ...issues)
    div.tumblers
        if descr
            h3.tumblers__header #{descr}
        each val in issues
            - var id = val.id
            - var name = val.name
            - var checked = Boolean(val.checked)
            div.tumblers__tumbler-container
                if checked 
                    input(class="tumblers__checkbox" type="checkbox" id=`${id}`  checked)
                else 
                    input(class="tumblers__checkbox" type="checkbox" id=`${id}`)
                label(for=`${id}` class="tumblers__label" tabindex=0) 
                p.tumblers__subscribe #{name}
                