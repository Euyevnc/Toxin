mixin Button-liker(descr, ...issues)
    div.button-liker
        if descr
            h3.button-liker__head #{descr}
        span.button-liker__cont
            each val in issues
                - var id = val.id
                - var am = val.am
                - var checked = Boolean(val.checked)
                if checked 
                    input(type="checkbox" id=`${id}` class="button-liker__box" checked)
                else 
                    input(type="checkbox" id=`${id}` class="button-liker__box")
                label(for=`${id}`)=am
                   