doctype html

block variables

html(lang = 'ru')
  head
    meta(charset = 'utf-8')
    meta(name = 'viewport', content = 'width=device-width')
    meta(name = 'viewport', content = 'initial-scale=1.0, width=device-width')
    link(rel = 'apple-touch-icon', sizes = '180x180', href = 'assets/favicons/apple-touch-icon.png')
    link(rel = 'icon', type = 'image/png', sizes = '32x32', href = 'assets/favicons/favicon-32x32.png')
    link(rel = 'icon', type = 'image/png', sizes = '16x16', href = 'assets/favicons/favicon-16x16.png')
    link(rel = 'manifest', href = 'assets/favicons/site.webmanifest')
    link(rel = 'mask-icon', href = 'assets/favicons/safari-pinned-tab.svg', color = '#5bbad5')
    meta(name = 'msapplication-TileColor', content = '#2b5797')
    meta(name = 'theme-color', content = '#c96464')

    block head

  body(class = `${blockClass}`)
    header(class = `${blockClass}__header`)
      div(class = `${blockClass}__wrapper`)
        block header

    main(class = `${blockClass}__content`)
      div(class = `${blockClass}__wrapper`)
        block content

    footer(class = `${blockClass}__footer`)
      div(class = `${blockClass}__wrapper`)
        block footer
        
      div(class = `${blockClass}__cellar`)
        div(class = `${blockClass}__wrapper`)
          block cellar 

  block script
