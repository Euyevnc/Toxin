doctype html

block variables

html(lang = 'ru')
  head
    meta(charset = 'utf-8')
    meta(name = 'viewport', content = 'width=device-width')
    meta(name = 'viewport', content = 'initial-scale=1.0, width=device-width')
    link(rel = 'apple-touch-icon', sizes = '180x180', href = 'assets/favicons/apple-touch-icon.png')
    link(rel = 'icon', type = 'image/png', sizes = '32x32', href = 'assets/favicons/favicon-32x32.png')
    link(rel = 'icon', type = 'image/png', sizes = '16x16', href = 'assets/favicons/favicon-16x16.png')
    link(rel = 'manifest', href = 'assets/favicons/site.webmanifest')
    link(rel = 'mask-icon', href = 'assets/favicons/safari-pinned-tab.svg', color = '#5bbad5')
    meta(name = 'msapplication-TileColor', content = '#2b5797')
    meta(name = 'theme-color', content = '#c96464')
    style.
      @font-face {
        font-weight: 400;
        font-family: 'Material Icons';
        font-style: normal;
        src: url('assets/fonts/MaterialIcons-Regular.eot'); /* For IE6-8 */
        src: local('Material Icons'), local('MaterialIcons-Regular'),
          url('assets/fonts/MaterialIcons-Regular.woff2')
            format('woff2'),
          url('assets/fonts/MaterialIcons-Regular.woff')
            format('woff'),
          url('assets/fonts/MaterialIcons-Regular.svg')
            format('svg');
          unicode-range: U+0030-U+10FFFD;
          font-display: block
      }
      @font-face {
        font-weight: normal;
        font-family: 'Montserrat';
        font-style: normal;
        src: local('Montserrat'),
          url('/assets/fonts/Montserrat-Regular.woff2') format('woff2'),
          url('/assets/fonts/Montserrat-Regular.woff') format('woff'),
          url('/assets/fonts/Montserrat-Regular.ttf') format('truetype'),
          url('/assets/fonts/Montserrat-Regular.svg') format('svg');
        unicode-range: U+000D-U+FB02;
        font-display: swap
      }
      @font-face {
        font-weight: bold;
        font-family: 'Montserrat';
        font-style: normal;
        src: local('Montserrat'),
          url('/assets/fonts/Montserrat-Bold.woff2') format('woff2'),
          url('/assets/fonts/Montserrat-Bold.ttf') format('truetype'),
          url('/assets/fonts/Montserrat-Bold.svg') format('svg');
        unicode-range: U+000D-U+FB02;
        font-display: swap
      }
    block head

  body(class = `${blockClass}`)
    header(class = `${blockClass}__header`)
      div(class = `${blockClass}__wrapper`)
        block header

    main(class = `${blockClass}__content`)
      div(class = `${blockClass}__wrapper`)
        block content

    footer(class = `${blockClass}__footer`)
      div(class = `${blockClass}__wrapper`)
        block footer
        
      div(class = `${blockClass}__cellar`)
        div(class = `${blockClass}__wrapper`)
          block cellar 

  block script
